<form action="/quizes/temas">	
	<input type="text" name="search" />
	<input type="submit" value="Buscar">
</form>

<table>
	<% for(var i in temas) { %>
		<tr>
			<td><a href="/quizes/temas/<%= temas[i].id %>"><%= temas[i].tema %></a></td>
			<% if(session.user) { %>
				<td><a href="/quizes/temas/<%= temas[i].id %>/edit"><button type="button">editar</button></a></td>
				<td>
					<form method="post" action="/quizes/temas/<%= temas[i].id %>?_method=delete">
						<button type="submit" onClick="return confirm('Borrar: <%= temas[i].tema %>');">
							borrar
						</button>
					</form>
				</td>
			<% } %>
		</tr>
	<% } %>
</table>

<% if(session.user) { %>
	<a href="/quizes/temas/new"><button type="button">Crear Tema</button></a>
<% } %>