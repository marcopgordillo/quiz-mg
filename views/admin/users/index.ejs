<form action="/admin/users">	
	<input type="text" name="search" />
	<input type="submit" value="Buscar">
</form>

<table>
	<% for(var i in users) { %>
		<tr>
			<td><a href="/admin/users/<%= users[i].id %>"><%= users[i].username %></a></td>
			<% if(session.user) { %>
				<td><a href="/admin/users/<%= users[i].id %>/edit"><button type="button">editar</button></a></td>
				<td>
					<form method="post" action="/admin/users/<%= users[i].id %>?_method=delete">
						<button type="submit" onClick="return confirm('Borrar: <%= users[i].username %>');">
							borrar
						</button>
					</form>
				</td>
			<% } %>
		</tr>
	<% } %>
</table>

<% if(session.user) { %>
	<a href="/admin/users/new"><button type="button">Crear Usuario</button></a>
<% } %>